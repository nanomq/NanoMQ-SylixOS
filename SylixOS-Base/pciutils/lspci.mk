LOCAL_SRCS += $(LSPCI_SRC)

#*********************************************************************************************************
# Header file search path (eg. LOCAL_INC_PATH := -I"Your hearder files search path")
#*********************************************************************************************************
LOCAL_INC_PATH := -I"$(SYLIXOS_BASE_PATH)/libcextern/libcextern/include"
